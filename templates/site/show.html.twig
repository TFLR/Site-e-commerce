{% extends "base.html.twig" %}

{% block body %}

	<section class="row article">
		<article class="col-md-6 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
			<h2>{{ produit.nom }}
			</h2>
			<div class="metadata">
				dans la catégorie
				{# {{ produit.categorie_id }}</div> #}
			<div class="content">
				<img src="{{ produit.image }}" alt="Image du produit">
				{{ produit.description|raw }}
                <p class="card-text text-end fw-bold">{{ produit.prix }}$</p>
			</div>
			<div class="card-body text-end">
                <a href="{{path('cart_add', {id: produit.id}) }}" 
                class="card-link btn btn-primary">Ajouter au panier</a>
            </div>
		</article>
	</section>

	{# <h2 class="text-center mx-auto m-3">Commentaires</h2>
