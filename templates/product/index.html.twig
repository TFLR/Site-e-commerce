{% extends 'base.html.twig' %}

{% block title %}Liste de produits{% endblock %}

{% block body %}
<h1 class="text-center my-3">Liste de produits</h1>
<div class="row">

{% for product in products %}

    <div class="col-md-4">
        <div class="card-md-4" style="width: 18rem;">
            <h3 class="card-header">{{product.title}}</h3>
            <img src="{{product.image}}" alt="Image du produit">
            <div class="card-body">
                <p class="card-text text-end fw-bold">{{product.price}}</p>
            </div>
            <div class="card-body text-end">
                <a href="{{path('cart_add', {id: product.id}) }}" 
                class="card-link btn btn-primary">Ajouter au panier</a>
            </div>
        </div>
    </div>    
    
{% endfor %} 


</div>

{% endblock %}
