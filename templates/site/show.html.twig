{% extends "base.html.twig" %}

{% block body %}

	<section class="row article">
		<article class="col-md-6 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
		
			<h2>{{ produit.nom }}
			</h2>
			<div class="metadata">
				dans la catégorie
				{{ produit.categorieId.titre }}</div>
			<div class="content">
				<img src="{{ produit.image }}" alt="Image du produit">
				<br>
				{{ produit.description|raw }}
                <p class="card-text text-end fw-bold">{{ produit.prix }}$</p>
			</div>
		</article>
	</section>

	<h2 class="text-center mx-auto m-3">Commentaires</h2>
	<section id="commentaire" class="col-md-10 mx-auto">
		{% for commentaire in produit.commentaires %}
			<div class="comment">
				<div class="row">
					<div class="col-md-3">
						(<small>{{ commentaire.createdAt|date('d/m/Y à H:i:s') }}</small>)
					</div>
					<div class="col-md-9">
						{{ commentaire.contenu|raw }}
					</div>
				</div>
			</div>
			<hr>
		{% endfor %}
	</section>

{% endblock %}
